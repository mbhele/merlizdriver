<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Driver Details</title>
    <link rel="stylesheet" href="/css/Detailsrides.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/css/lightbox.min.css">
    <style>
        body {
            background-color: #000;
            color: #fff;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background-color: #111;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
        }

        h1, h2, h3 {
            text-align: center;
            color: #ffd700;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ffd700;
        }

        th {
            background-color: #222;
            color: #ffd700;
        }

        td {
            background-color: #111;
        }

        .approve-btn, .reject-btn, .freeze-btn, .unfreeze-btn {
            background-color: #ffd700;
            color: #000;
            padding: 5px 10px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 0.9rem;
            cursor: pointer;
            border: none;
            margin: 10px;
        }

        .approve-btn:hover, .reject-btn:hover, .freeze-btn:hover, .unfreeze-btn:hover {
            background-color: #ffbf00;
        }

        .swiper-container {
            width: 100%;
            height: 360px;
            margin: 20px auto;
            position: relative;
        }

        .swiper-slide {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .license-images img {
            width: 380px;
            height: 228px;
            margin: 0 auto;
            border-radius: 8px;
            border: 2px solid #ffd700;
            cursor: pointer;
            object-fit: cover;
        }

        .swiper-button-next,
        .swiper-button-prev {
            color: #ffd700;
            top: 50%;
            transform: translateY(-50%);
            position: absolute;
        }

        /* Remove bottom bar of the swiper */
        .swiper-pagination-bullet {
            display: none;
        }

        #map {
            height: 400px;
            width: 100%;
            margin-top: 20px;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Driver: <%= driver.userId.username %> (<%= driver.userId.email %>)</h1>

        <!-- Driver Details Section -->
        <div>
            <img src="<%= driver.profilePicture %>" alt="Driver Image" style="width:150px; height:150px; border-radius: 50%; border: 2px solid #ffd700;">
            <p><strong>Email:</strong> <%= driver.email %></p>
            <p><strong>Phone:</strong> <%= driver.phone %></p>
            <p><strong>Vehicle:</strong> <%= driver.vehicle.make %> <%= driver.vehicle.model %> - <%= driver.vehicle.plateNumber %></p>
            <p><strong>Status:</strong> <%= driver.status %></p>
            <p><strong>Approval Status:</strong> <%= driver.approvalStatus %></p>

            <!-- Display License Images using Swiper -->
            <div class="license-images">
                <h3>Driver's License Images</h3>
                <div class="swiper-container">
                    <div class="swiper-wrapper">
                        <% if (driver.licenseFront) { %>
                            <div class="swiper-slide">
                                <a href="<%= driver.licenseFront %>" data-lightbox="licenses" data-title="License Front">
                                    <img src="<%= driver.licenseFront %>" alt="License Front">
                                </a>
                            </div>
                        <% } else { %>
                            <div class="swiper-slide">
                                <p>No license front image available.</p>
                            </div>
                        <% } %>
                        
                        <% if (driver.licenseBack) { %>
                            <div class="swiper-slide">
                                <a href="<%= driver.licenseBack %>" data-lightbox="licenses" data-title="License Back">
                                    <img src="<%= driver.licenseBack %>" alt="License Back">
                                </a>
                            </div>
                        <% } else { %>
                            <div class="swiper-slide">
                                <p>No license back image available.</p>
                            </div>
                        <% } %>
                    </div>
                    <!-- Add Swiper Navigation -->
                    <div class="swiper-button-next"></div>
                    <div class="swiper-button-prev"></div>
                </div>
            </div>

            <!-- Map Section -->
            <h2>Driver Location</h2>
            <div id="map"></div>

            <!-- Approve or Reject Driver -->
            <form action="/admin/drivers/<%= driver._id %>/approve" method="POST" style="display:inline;">
                <input type="hidden" name="action" value="approve">
                <button type="submit" class="approve-btn">Approve</button>
            </form>
            <form action="/admin/drivers/<%= driver._id %>/approve" method="POST" style="display:inline;">
                <input type="hidden" name="action" value="reject">
                <button type="submit" class="reject-btn">Reject</button>
            </form>
        </div>

        <!-- Trips Section -->
        <h2>Trips</h2>
        <table>
            <thead>
                <tr>
                    <th>Origin</th>
                    <th>Destination</th>
                    <th>Status</th>
                    <th>Fare</th>
                    <th>Distance (km)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (driver.rideHistory && driver.rideHistory.length > 0) { %>
                    <% driver.rideHistory.forEach(trip => { %>
                        <tr>
                            <td><%= trip.origin %></td>
                            <td><%= trip.destination %></td>
                            <td class="<%= trip.approved ? 'approved' : 'pending' %>"><%= trip.status %></td>
                            <td><%= trip.fare %></td>
                            <td><%= trip.distance %> km</td>
                            <td>
                                <% if (trip.status !== 'frozen') { %>
                                    <form action="/admin/freeze/<%= trip._id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="freeze-btn">Freeze</button>
                                    </form>
                                <% } else { %>
                                    <form action="/admin/unfreeze/<%= trip._id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="unfreeze-btn">Unfreeze</button>
                                    </form>
                                <% } %>
                                <% if (!trip.approved && trip.status !== 'frozen') { %>
                                    <form action="/admin/approve/<%= trip._id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="approve-btn"><i class="fas fa-check"></i> Approve</button>
                                    </form>
                                    <form action="/admin/reject/<%= trip._id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="reject-btn"><i class="fas fa-times"></i> Reject</button>
                                    </form>
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="6" style="text-align: center;">No trips available for this driver.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/js/lightbox.min.js"></script>
    <script>
        var swiper = new Swiper('.swiper-container', {
            slidesPerView: 1,
            spaceBetween: 10,
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            pagination: false,
            loop: false,
        });
    </script>

    <!-- Google Maps Script -->
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=YOUR_GOOGLE_MAPS_API_KEY&callback=initMap"></script>
    <script>
        function initMap() {
            const driverLocation = {
                lat: <%= driver.currentLocation.coordinates[1] || 0 %>,
                lng: <%= driver.currentLocation.coordinates[0] || 0 %>
            };
            const map = new google.maps.Map(document.getElementById("map"), {
                zoom: 12,
                center: driverLocation,
            });
            const marker = new google.maps.Marker({
                position: driverLocation,
                map: map,
            });
        }
    </script>
</body>
</html>
