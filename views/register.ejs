<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Register</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Roboto', sans-serif;
      background-color: #000; /* Black background */
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      animation: fadeIn 1s ease-in-out;
    }
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    form {
      background: #000; /* Black background for form */
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(255, 215, 0, 0.5); /* Gold shadow */
      width: 100%;
      max-width: 400px;
      box-sizing: border-box;
      text-align: left;
      animation: scaleUp 0.5s ease-in-out;
    }
    @keyframes scaleUp {
      from { transform: scale(0.8); }
      to { transform: scale(1); }
    }
    label {
      display: block;
      margin-bottom: 8px;
      font-weight: bold;
      color: #FFD700; /* Gold color */
    }
    input[type="text"],
    input[type="email"],
    input[type="password"],
    select {
      width: calc(100% - 20px);
      padding: 10px;
      margin-bottom: 10px;
      border: 1px solid #FFD700; /* Gold border */
      background-color: #000; /* Black background */
      color: #fff; /* White text */
      border-radius: 4px;
      box-sizing: border-box;
    }
    input::placeholder {
      color: #ccc; /* Light gray placeholder */
    }
    .btn {
      width: calc(100% - 20px);
      padding: 10px;
      background: #FFD700; /* Gold background */
      border: none;
      color: #000; /* Black text */
      font-size: 16px;
      border-radius: 4px;
      cursor: pointer;
      transition: background 0.3s ease;
      margin: 10px 0;
      display: inline-block;
    }
    .btn:hover {
      background: #fff; /* White background on hover */
      color: #000; /* Black text on hover */
    }
    p {
      text-align: center;
      color: #fff; /* White text */
    }
    p a {
      color: #FFD700; /* Gold color */
      text-decoration: none;
      transition: color 0.3s ease;
    }
    p a:hover {
      color: #fff; /* White on hover */
    }
    h1 {
      color: #FFD700; /* Gold color */
      margin-bottom: 20px;
      font-size: 1.8rem;
      font-weight: 700;
      text-align: center; /* Center-aligned heading */
    }
  </style>
</head>
<body>
  <form id="registerForm">
    <h1>Admin Registration</h1>
    <label for="username">Username:</label>
    <input type="text" id="username" name="username" placeholder="Enter your username" required>
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" placeholder="Enter your email" required>
    <label for="password">Password:</label>
    <input type="password" id="password" name="password" placeholder="Enter your password" required>
    <div id="adminCodeField">
      <label for="adminCode">Admin Code:</label>
      <input type="text" id="adminCode" name="adminCode" placeholder="Enter admin code" required>
    </div>
    <button type="submit" class="btn">Register</button>
    <p><a href="/" id="alreadyAc">Already have an account? Login here</a></p>
  </form>

  <script>
    document.getElementById('registerForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const username = document.getElementById('username').value;
      const email = document.getElementById('email').value;
      const password = document.getElementById('password').value;
      const adminCode = document.getElementById('adminCode').value;

      const body = { username, email, password, adminCode };

      const response = await fetch('/api/auth/register', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(body)
      });

      const data = await response.json();
      if (data.redirect) {
        window.location.href = data.redirect;
      } else {
        alert(data.message || 'Registration failed');
      }
    });
  </script>
</body>
</html>
